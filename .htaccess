# Redirigir todo el tráfico a la carpeta public
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Si ya estás en /public, no hacer nada
    RewriteRule ^public/ - [L]
    
    # Redirigir todo lo demás a public/ (reescritura interna, no redirect)
    RewriteCond %{REQUEST_URI} !^/test/public/
    RewriteRule ^(.*)$ public/$1 [L,QSA]
</IfModule>

# Proteger archivos sensibles
<FilesMatch "^(composer\.json|composer\.lock|package\.json|\.git.*|README\.md)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>
