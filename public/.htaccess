# Deshabilitar listado de directorios
Options -Indexes

# Seguir enlaces simbólicos (necesario para mod_rewrite)
Options +FollowSymLinks

# Protección contra inyección de código en archivos subidos
<FilesMatch "\.(php|phtml|php3|php4|php5|php7|phps)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# Permitir acceso solo a index.php
<Files "index.php">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</Files>

# Permitir ejecución de PHP en WordPress (carpeta /blog)
<IfModule mod_authz_core.c>
    <Directory ~ "^.*/blog/">
        <FilesMatch "\.php$">
            Require all granted
        </FilesMatch>
    </Directory>
</IfModule>

# Reescritura de URLs
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Forzar HTTPS (descomenta en producción)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Forzar www (o no-www según prefieras)
    # RewriteCond %{HTTP_HOST} !^www\.
    # RewriteRule ^(.*)$ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Excluir carpeta /blog del router PHP (para WordPress)
    RewriteCond %{REQUEST_URI} !^/test/blog/
    
    # Si el archivo o directorio existe, no reescribir
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Todo lo demás pasa por el front controller
    RewriteRule ^ index.php [L,QSA]
</IfModule>

# Compresión GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Cache del navegador
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imágenes
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS y JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fuentes
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Seguridad adicional
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Protección XSS
    Header always set X-XSS-Protection "1; mode=block"
    
    # Prevenir MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Cache Control para assets
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp|ico|css|js|woff|woff2)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

# Proteger archivos sensibles
<FilesMatch "^\.">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# Deshabilitar el track de servidor
ServerSignature Off

# Charset UTF-8
AddDefaultCharset UTF-8
AddCharset UTF-8 .html .css .js .xml .json .txt